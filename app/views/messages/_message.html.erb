<div class="message-container" id="message-<%= message.id %>">
<%= image_tag "https://kitt.lewagon.com/placeholder/users/#{current_user.nickname}", class: "avatar-square", alt: "avatar-square" %>
  <i class="author">
    <span><%= message.user.nickname %></span>
    <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
  </i>
  <p><%= message.content %></p>
</div>